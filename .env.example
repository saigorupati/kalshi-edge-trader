# ============================================================
# Kalshi Temperature Edge Trader — Environment Variables
# Copy this file to .env and fill in your credentials.
# NEVER commit .env to git.
# ============================================================

# ------ Kalshi API ------
# Get from https://kalshi.com/settings/api
KALSHI_KEY_ID=your_key_id_here
# RSA private key PEM (use \n for newlines in single-line format)
KALSHI_PRIVATE_KEY_PEM=-----BEGIN RSA PRIVATE KEY-----\nYOUR_KEY_HERE\n-----END RSA PRIVATE KEY-----

# Trading mode: paper (no real orders) | demo (Kalshi sandbox) | live (real money)
TRADING_MODE=paper

# ------ AWS DynamoDB ------
# Create an IAM user with DynamoDB permissions and paste credentials here
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# ------ Bot Settings ------
STARTING_BALANCE=1000.0
LOG_LEVEL=INFO

# ------ API Security ------
# Secret key that protects all FastAPI endpoints (REST + WebSocket).
# Generate with: openssl rand -hex 32
# Must match NEXT_PUBLIC_API_SECRET_KEY set on the frontend service.
# Leave blank to disable auth (local dev only — do NOT leave blank in production).
API_SECRET_KEY=

# ------ Trading Thresholds (optional, these are the defaults) ------
# Minimum net edge required to enter a single-bin trade.
# Lower = more trades, thinner margins. Raise to be more selective.
# 0.05 = 5% (default) | 0.03 = 3% (looser) | 0.08 = 8% (strict)
MIN_EDGE_THRESHOLD=0.05

# Kelly fraction — scales position size. Lower = smaller bets.
# 0.25 = quarter-Kelly (default, conservative) | 0.10 = very small | 0.50 = half-Kelly
KELLY_FRACTION=0.25
